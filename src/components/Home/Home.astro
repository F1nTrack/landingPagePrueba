---
import Button from './Button.astro';
import Stats from './Stats.astro';
---

<section id="home" class="max-w-7xl mx-28 py-7  grid grid-cols-2">
    <section class="max-w-fit">
        <section class="border-b">
        <h1 class="text-6xl font-bold">Tu identidad digital</h1>
        <div class="max-w-md">
        <h1 class="text-6xl  text-blue-800 font-bold mb-4">mas segura que  nunca</h1>
        <p class="text-lg text-gray-700 mb-6">KapakID revoluciona la gestion de documentos e identidad digital con tecnologia de vanguardia, ofreciendo seguridad, rapidez y accesibilidad sin precedentes.</p>
        </div>
        <div class="flex items-center py-2 pb-8 gap-4 mt-6">
  <!-- Botón "Empieza ahora" -->
            <Button 
                href="#contacto" 
                class="bg-blue-800 text-white hover:bg-blue-800"
            >
                <p slot="before" class="px-3">Empieza ahora</p>
                <svg slot="after" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-narrow-right">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M5 12l14 0" />
                <path d="M15 16l4 -4" />
                <path d="M15 8l4 4" />
                </svg>
            </Button>

            <!-- Botón "Ver Demo" -->
            <Button 
                href="#demo" 
                class="bg-white text-blue-400 border-2 border-blue-400 hover:bg-blue-50"
            >
                <svg slot="before" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-player-play">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M7 4v16l13 -8z" />
                </svg>
                <p slot="after" class="px-3">Ver Demo</p>
            </Button>
        </div>
        </section>
        <section class="flex gap-4 py-4">
            <Stats>
                <span slot="number">+10K</span>
                <span slot="string">Usuarios activos</span>
            </Stats>

            <Stats>
                <span slot="number">99.9%</span>
                <span slot="string">Disponibilidad</span>
            </Stats>

            <Stats>
                <span slot="number">24/7</span>
                <span slot="string">Soporte disponible</span>
            </Stats>
        </section>



    </section>

    <section class="text-left py-20">
        <p class="text-lg text-gray-700">Your gateway to the stars.</p>
        
    </section>
    
</section>

